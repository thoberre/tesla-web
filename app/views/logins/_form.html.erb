<%= form_for(@login) do |f| %>
  <% if @login.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(@login.errors.count, "error") %> prohibited this login to be sent:</h5>

      <ul>
      <% @login.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div>
  <p>Please enter your credentials for MyTesla:</p>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %>

    <%= f.password_field :password %>
  </div>
  <span class="help-block" id="error_explanation">We encourage you to use a temporary MyTesla password if you want to try this service.</span>
  <%= f.label :terms do %>
     <%= f.check_box :terms, :style => "float: left; margin:5px" %>  I understand the risks
  <% end %>  
  <div>
    <%= f.submit 'Login', :class => 'btn btn-block btn-success' %>
  </div>
</div>
<% end %>
